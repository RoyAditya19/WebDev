extends base.pug

block scripts
    script(src="/static/script.js")

block style 
    style 
        include ../static/style.css
        include ../static/stylecontact.css

block content
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myinput", name="name", placeholder = "Enter your Name")
            input(type="phone", class="myinput", name="phone", placeholder = "Enter your Phone")
            input(type="text", class="myinput", name="Email", placeholder = "Enter your E-Mail Id")
            input(type="text", class="myinput", name="adress", placeholder = "Enter your Adress")
            input(type="text", class="myinput", name="Query", placeholder = "Ask your Query")
            button( class="btn") Submit 
            br
